<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cl_view_repair_order_form" model="ir.ui.view">
            <field name="name">cl_mrp.repair.form</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='operations']/tree" position="inside">
                    <field name="pieza_anyadida"/>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="attributes">
                    <attribute name="attrs">{'invisible':[('n_lot_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="n_lot_id" attrs="{'invisible':[('lot_id','!=',False)]}"/>
                    <field name="po_rel" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='quotation_notes']" position="after">
                    <field name="rep_conf" invisible="1" />
                    <field name="rec" invisible="1" />
                    <field name="rma" invisible="1"/>
                    <field name="reparation" attrs="{'invisible':[('rep_conf','=',False)]}" />
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="%(cl_minor_additions.create_reparation_wizard)d" string="Nuevo test" type="action" class="oe_highlight" context="{'default_RMA':rma, 'default_product':product_id}"/>
                </xpath>
                <xpath expr="//page[4]" position="after">
                    <page string="Reparaciones">
                        <field name="reparation"/>
                        <tree>
                            <!--<field name="tecnico"/>-->
                            <!--<field name="date"/>-->
                        </tree>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
