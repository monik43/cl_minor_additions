<odoo>
    <data>
        <!-- Form -->
        <record id="user_credentials_form_view" model="ir.ui.view">
            <field name="name">user.credentials.form.view</field>
            <field name="model">cl.user.credentials</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="mail"/>
                                <field name="password"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Action -->
        <record model="ir.actions.act_window" id="user_credentials_action">
            <field name="name">Credenciales de usuario</field>
            <field name="res_model">cl.user.credentials</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>