<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="create_reparation_form" model="ir.ui.view">
            <field name="name">create.reparation</field>
            <field name="model">cl.reparation</field>
            <field name="arch" type="xml">
                <form string="Nuevo test">
                    <group class="oe_title">
                        <group>
                            <field name="tecnico_rep"/>
                            <field name="origen_rep"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="RMA"/>
                        </group>
                        <field name="reparation_test_basic"/>
                        <field name="usr_credentials"/>
                        <field name="reparation_test_user" attrs="{'invisible': [('usr_credentials', '=', False)]}"/>
                    </group>
                    <footer>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="create_reparation_wizard" model="ir.actions.act_window">
            <field name="name">Crea un nuevo test de reparaci√≥n</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cl.reparation</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="create_reparation_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>